{
  "name": "client-onboarding-automator",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["server", "client"],
  "scripts": {
    "lint": "npm run lint:client",
    "lint:client": "npm --workspace client run lint",
    "format": "npm --workspace client run format",
    "prepare": "echo 'Husky disabled temporarily'"
  },
  "lint-staged": {
    "client/**/*.{ts,tsx,js,jsx}": [
      "echo 'Linting disabled during debug'"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  }
}
