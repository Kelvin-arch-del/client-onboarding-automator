{
  "name": "client-onboarding-automator",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for legal client onboarding automation platform (server & client)",
  "workspaces": [
    "server",    
    "client"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "start:client": "npm --workspace client run dev",        
    "build:client": "npm --workspace client run build",
    "lint:client": "npm --workspace client run lint",
    "format:client": "npm --workspace client run format",
    "test:client": "npm --workspace client run test",

    "start:server": "npm --workspace server run dev",       
    "build:server": "npm --workspace server run build",
    "lint:server": "npm --workspace server run lint",
    "format:server": "npm --workspace server run format",
    "test:server": "npm --workspace server run test",

    "test:all": "npm run test:server && npm run test:client"
   
  }
}

