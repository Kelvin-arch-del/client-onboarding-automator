{
  "name": "client-onboarding-automator",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["server", "client"],
  "scripts": {
    "prepare": "husky install",
    "lint": "npm run lint:client",
    "lint:client": "npm --workspace client run lint",
    "format": "npm --workspace client run format"
  },
  "lint-staged": {
    "client/**/*.{ts,tsx,js,jsx}": [
      "npm --workspace client run lint:fix",
      "npm --workspace client run format:check",
      "npm --workspace client run lint"
    ],
    "server/**/*.ts": [
      "npm --workspace server run lint:fix",
      "npm --workspace server run format:check"
      ]
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  }
}
